<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blogified</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <div class="container">
        <h1><u>Blogified</u></h1>

        <a href="/blogs/new" class="btn btn-success">New Blog</a>

        <% blogs.forEach(blog => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= blog.title %></h3>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= blog.date.toLocaleDateString() %></h5>
                    <p><%= blog.description %></p>
                    <a href="blogs/<%= blog.id %>" class="btn btn-primary">Read Blog</a>
                    <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>